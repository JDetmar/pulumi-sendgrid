          "type": "string"
        },
        "updatedAt": {
          "type": "string"
        },
        "versionId": {
          "type": "string"
        }
      },
      "type": "object",
      "required": [
        "name",
        "templateId",
        "versionId"
      ],
      "inputProperties": {
        "active": {
          "type": "integer"
        },
        "editor": {
          "type": "string"
        },
        "generatePlainContent": {
          "type": "boolean"
        },
        "htmlContent": {
          "type": "string"
